<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/styles.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="icon" type="image/x-icon" href="/images/PickMeLogo2.png">
    <title>KindOfDay</title>
</head>

<body>
    <div class="join-form">
        <h1 id="app-name">PickOne</h1>
        <!-- Pick_Me_4.png -->
        <img src="/images/PickMeLogo2.png" alt="logo" id="logo-img" width = "100" height="100">
        <label for="username">Username</label>
        <input id="username" placeholder="username" aria-describedby="userHelp">
        <small id="userHelp" class="form-text text-muted">
            Your username/room name should not contain #, &, or +.
          </small>
        <input id="room" placeholder="room">
        <button id="join-room" type="button" class="btn btn-secondary" onclick="joinRoom();">JOIN</button>
    </div>

    <script>
        function joinRoom(){
            let username = document.querySelector("#username").value;
            let room = document.querySelector("#room").value;
            if (username.length != 0 && room.length != 0) {
                window.location = "/" + room + "?value=" + username;
            }
        };

    </script>
</body>
</html>